/* pages/yueku/yueku.wxss */
@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

page{
    margin-bottom: 100rpx;
    padding-bottom: 20rpx;
}

/* 分类样式 */
.class_list{
    display: flex;
}
.class_list_item{
    flex: 1;
}
.class_list_item view{
    margin: auto;
    display: block;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 120rpx;
    background: red;
}
.class_list_item text{
    margin: 10rpx auto;
    text-align: center;
    width: 120rpx;
    display: block;
}

/* 最新音乐 */
/* .new_song{} */
.new_song_item{
    padding: 0 20rpx !important;
}
.new_song_list{
    display: inline-block;
    width: 220rpx;
    vertical-align: middle;
    margin: 0 8rpx;
}
.new_song_list image{
    width: 220rpx;
    height: 220rpx;
    border-radius: 10rpx;
}
.new_song_list text{
    display: block;
    overflow:hidden;/* //超出一行文字自动隐藏  */
    text-overflow:ellipsis;/* //文字隐藏后添加省略号 */
    white-space:nowrap;/* //强制不换行 */
}
.new_song_list .new_song_songName{
    font-size: 28rpx;
}
.new_song_list .new_song_name{
    font-size: 24rpx;
}

/* 推荐MV样式 */
.recommend_mv{
    margin: 20rpx 0 0;
}
.recommend_mv_title{
    display: block;
    padding: 0 40rpx;
    font-size: 32rpx;
    font-weight: bold;
}
.recommend_mv_item{
    margin: 20rpx 0 0;
    padding: 0 40rpx;
    /* display: flex; */
}
.recommend_mv_list{
    display: inline-block;
    width: 48%;
    margin: 0 1%;
    vertical-align: middle;
}
.recommend_mv_list image{
    width: 100%;
    height: 180rpx;
}
.recommend_mv_list text{
    display: block;
    font-size: 28rpx;
    height: 70rpx;
    overflow:hidden;/* //超出一行文字自动隐藏  */
    text-overflow:ellipsis;/* //文字隐藏后添加省略号 */
    white-space:nowrap;/* //强制不换行 */
}